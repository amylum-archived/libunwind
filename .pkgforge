name 'libunwind'
org 'amylum'

deps(
  'linux-api-headers': {
    version: '4.20-1',
    checksum: 'aed037b2b3fb2df77ca19359a20188d39c25d011febf4d3733d251fa87ca9636'
  }
)

configure_flags(
  prefix: '/usr'
)

cflags
harden

patch 'musl-execinfo-fix.patch'
patch 'gcc_s.patch'

build do
  run 'autoreconf -i'
  configure
  make
  run 'find src/.libs -name "*.so*" -type f | xargs chrpath -d'
  install
  run "find src/.libs -name '*.so*' ! -name '*T' -type f | xargs -n1 -I{} cp {} #{releasedir}/usr/lib"
end

test do
  # TODO: add tests
end
