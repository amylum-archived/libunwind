name 'libunwind'
org 'amylum'

deps(
  'linux-api-headers': {
    version: '4.18-1',
    checksum: 'edc8dab0e57cb3868867a86d501eb5f314ad00d87e50957c3ffae113ce967298'
  }
)

configure_flags(
  prefix: '/usr'
)

cflags
harden

patch 'musl-execinfo-fix.patch'
patch 'gcc_s.patch'

build do
  run 'autoreconf -i'
  configure
  make
  run 'find src/.libs -name "*.so*" -type f | xargs chrpath -d'
  install
  run "find src/.libs -name '*.so*' ! -name '*T' -type f | xargs -n1 -I{} cp {} #{releasedir}/usr/lib"
end

test do
  # TODO: add tests
end
