name 'libunwind'
org 'amylum'

deps(
  'linux-api-headers': {
    version: '4.13-1',
    checksum: '50b2288419fe132c061bdf3d297293011929abc1092ffaa5e523ad6549b4f5fa'
  }
)

configure_flags(
  prefix: '/usr'
)

cflags
harden

patch 'musl-execinfo-fix.patch'
patch 'gcc_s.patch'

build do
  run 'autoreconf -i'
  configure
  make
  run 'find src/.libs -name "*.so*" -type f | xargs chrpath -d'
  install
  run "find src/.libs -name '*.so*' ! -name '*T' -type f | xargs -n1 -I{} cp {} #{releasedir}/usr/lib"
end

test do
  # TODO: add tests
end
